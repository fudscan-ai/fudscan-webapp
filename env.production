# Production Environment Variables for Vercel
# Copy these to Vercel Environment Variables in dashboard

# Database (Vercel Postgres or PlanetScale)
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"
# For PlanetScale MySQL:
# DATABASE_URL="mysql://username:password@host:port/database?sslaccept=strict"

# OpenAI API
OPENAI_API_KEY="sk-your-openai-api-key"

# JWT Secret (generate a strong random string)
JWT_SECRET="your-super-secure-jwt-secret-key-here"

# Chroma Vector Database (External hosted service)
CHROMA_URL="https://your-chroma-instance.com"
# Alternative: Use Pinecone, Weaviate, or Qdrant
# PINECONE_API_KEY="your-pinecone-key"
# PINECONE_ENVIRONMENT="your-pinecone-env"

# Next.js Public Variables
NEXT_PUBLIC_BASE_URL="https://your-app.vercel.app"
NEXT_PUBLIC_DEFAULT_API_KEY="your-default-api-key"

# External API Keys
DEBANK_API_KEY="your-debank-api-key"
NANSEN_API_KEY="your-nansen-api-key"
DEXSCREENER_API_KEY="your-dexscreener-api-key"

# Optional: Vercel KV for caching (alternative to Chroma for simple use cases)
# KV_REST_API_URL="https://your-kv-url.upstash.io"
# KV_REST_API_TOKEN="your-kv-token"
